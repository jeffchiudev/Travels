@using Places.Models;

<h1>Places I've been!</h1>
@if (Model.Count == 0)
{
    <p>Please enter a location you've been to!</p>
    <a href="/places/new">Click here to enter a location!</a>
}

<ul>
    @foreach (Place place in Model)
    {
        <li><a href="/places/@place.Id">@place.Location</a></li>
    }
</ul>
<a href="/places/new">Add a new location entry</a>